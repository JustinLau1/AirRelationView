<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme_solink" parent="BaseAppThemeBlack" />

    <!--设置-全屏-->
    <style name="BaseAppThemeBlack" parent="AppTheme.Base">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/solink_background</item>  <!-- 状态栏 -->
        <item name="colorAccent">@color/mine_color</item>  <!-- 重点,指的的是手指按下系统空间等显示的颜色 -->
        <item name="android:windowBackground">@color/white</item>//设置整个app背景颜色
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="NoTitleFullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
